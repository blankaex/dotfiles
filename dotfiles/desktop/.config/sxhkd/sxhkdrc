# Window Management
mod4 + shift + q
    xkill


# Launch Processes
mod4 + Return
    alacritty
mod4 + d
    rofi -show run -m primary
mod4 + t
    alacritty -e ranger
mod4 + o; n
    alacritty -e ncmpcpp
mod4 + o; q
    qbittorrent
mod4 + o; t
    thunderbird
mod4 + o; w
    firefox


# Device Management
mod4 + {F7,F8}
    rofi{mount,umount}
mod4 + F9
    confirm "Shut down?" "shutdown now"
mod4 + F10
    confirm "Restart?" "reboot"
mod4 + F11
    confirm "Log out?" "i3-msg exit"
mod4 + F12
    lock


# Audio Control
XF86AudioMute
    vol -m
XF86Audio{Lower,Raise}Volume
    vol -{d,u} 5
mod4 + p; i
    mpc prev
mod4 + p; o
    mpc next
mod4 + p; p
    mpc toggle


# Screen Capture
Print
    maim -u $HOME/$(date -Iseconds).jpg
mod4 + Print
    maim -su | xclip -selection clipboard -t image/png
mod4 + shift + Print
    maim -su $HOME/$(date -Iseconds).jpg


# Misc
F1
    xdotool click 1
@F6
    xdotool search --onlyvisible --class runescape windowactivate type $(xclip -o)
